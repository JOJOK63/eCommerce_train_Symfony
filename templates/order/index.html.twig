{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - La Boutique Française{% endblock %}

{% block content %}
    <h2>Je passe ma commande </h2>
    <p>Choisissez vos préférences avant de passer votre commande sur La Boutique Française</p>
    <hr>
    <div class="row">
        <div class="col-md-6">

            {# this part is here to interprate html passe tin the function toString in Address.php entity #}
            {#                TODO trouver comment faire disparaitre l'adresse de livraison en trop#}

            {% set formHtml %}
                {# we set the form , and says the form execute a specific action here order_recap #}
                {{ form_start(form,{action:path('order_recap')}) }}
                <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
            {% endset %}
            {# and we make the replace  [br] to <br/>  ,  and raw is to inteprete html #}
            {{ formHtml | replace({'[br]' : '<br/>'}) | raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Récapitulatif de ma commande</b><br/>
            </div>
            <div class="order-summary">
                {% for  key,product in cart %}
                    <div class="space-between-product">
                        <div class="row" {% if key > 0 %} {% endif %}>
                            <div class="col-2">
                                <img src="uploads/products/{{ product.product.illustration }}"
                                     alt="{{ product.product.name }}" height="75px"/>
                            </div>
                            <div class="col-8 my-auto">
                                {{ product.product.name }}<br/>
                                <small>{{ product.product.subtitle }}</small>
                            </div>
                            <div class="col-2 my-auto">
                                x {{ product.quantity }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock content %}
